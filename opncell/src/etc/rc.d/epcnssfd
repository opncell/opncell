#!/bin/sh
#
# PROVIDE: epcnssfd
# KEYWORD: shutdown

. /etc/rc.subr

name=epcnssfd
service_name=nssfd
desc="AMF daemon"
rcvar=${name}_enable
command="/usr/ports/open5gs/install/bin/open5gs-${service_name}"
start_cmd="${name}_start"
command_args="-D > /dev/null 2>&1"

load_rc_config ${name}
: "${epcnssfd_enable:="NO"}"

epcnssfd_start(){
        echo "Starting open5gs-${service_name} daemon"
        
#        mkdir -p /var/run/epc
        pfile="/var/run/epc/epcnssfd.pid"
        cd /tmp || exit 1

        if /usr/local/etc/rc.d/startmmed.sh ${command} ${pfile}; then
                echo "Started"
        else
                echo "Failed to start"
        fi
}

run_rc_command "$1"
