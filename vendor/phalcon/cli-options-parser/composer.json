{
    "name": "phalcon/cli-options-parser",
    "type": "library",
    "description": "Command line arguments/options parser.",
    "keywords": [
        "argparse",
        "cli",
        "command-line",
        "command",
        "line",
        "option",
        "optparse",
        "parser",
        "terminal",
        "getopt"
    ],
    "homepage": "https://phalconphp.com",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Phalcon Team",
            "email": "team@phalconphp.com",
            "homepage": "https://phalconphp.com/en/team"
        },
        {
            "name": "Contributors",
            "homepage": "https://github.com/phalcon/cli-options-parser/graphs/contributors"
        }
    ],
    "require": {
        "php": ">=7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.8",
        "squizlabs/php_codesniffer": "3.*"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Phalcon\\Cop\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phalcon\\Cop\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/phalcon/cli-options-parser/issues",
        "forum": "https://forum.phalconphp.com/",
        "source": "https://github.com/phalcon/cli-options-parser"
    },
    "archive": {
        "exclude": [
            "/build",
            "/tests",
            ".travis.yml",
            "boxfile.yml",
            "phpcs.xml.dist",
            "phpunit.xml.dist",
            "scrutinizer.yml"
        ]
    }
}
